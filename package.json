{
  "name": "template",
  "version": "1.0.0",
  "description": "samplesample",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "watch:js": "watchify -t babelify ./js/script.js -o ./js/script.min.js",
    "start": "npm-run-all --parallel watch:sass watch:js",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "compress:js": "browserify ./js/script.js -t babelify --outfile ./js/script.js",
    "minify:js": "uglifyjs ./js/script.js -c --source-map --output ./js/script.min.js",
    "build": "npm-run-all compile:sass prefix:css compress:css compress:js minify:js"
  },
  "author": "kote2",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "uglify-js": "^3.4.2"
  }
}
